<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#051A5F"
    tools:context=".Sachdeilta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sharp"
        android:orientation="vertical"
        android:padding="25dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="SỬA SÁCH"
            android:textAlignment="center"
            android:textColor="?attr/colorError"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã sách:"
            />
        <EditText
            android:id="@+id/edMaSachsua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã sách" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            ></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sách:"
            />
        <EditText
            android:id="@+id/edTenSachsua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sách" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tác giả:"
            />
        <EditText
            android:id="@+id/edTacGiasua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tác giả" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NXB:"
            />
        <EditText
            android:id="@+id/edNXBsua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhà xuất bản" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá bìa:"
            />
        <EditText
            android:id="@+id/edGiaBiasua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá bìa" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng:"
            />
        <EditText
            android:id="@+id/edSoLuongsua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số lượng" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/btnUpdasua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="capsua"
                android:layout_marginRight="5dp"
                android:text="Cập nhật" />
            <Button
                android:id="@+id/btnCancesua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="quaysua"
                android:layout_marginRight="5dp"
                android:text="Quay lại" />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>