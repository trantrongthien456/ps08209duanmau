<?xml version="1.0" encoding="utf-8"?>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sharp2"

    android:orientation="vertical"
    tools:context=".GiaoDienActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_nguoidung"
            android:layout_width="167dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/emone" />

        <ImageView
            android:id="@+id/iv_theloai"
            android:layout_width="148dp"
            android:layout_height="98dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo2212" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_nguoidung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textColor="#f24c0b"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Người Dùng" />

        <TextView
            android:id="@+id/text_theloai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textColor="#f24c0b"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Thể Loại" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sach"
            android:layout_width="167dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bookicon" />

        <ImageView
            android:id="@+id/iv_hoadon"
            android:layout_width="148dp"
            android:layout_height="98dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hdicon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textColor="#f24c0b"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Sách" />

        <TextView
            android:id="@+id/text_hoadon"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hóa Đơn"
            android:textColor="#f24c0b"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sachbanchay"
            android:layout_width="167dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo220" />

        <ImageView
            android:id="@+id/iv_thongke"
            android:layout_width="148dp"
            android:layout_height="98dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/thongke" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_sachbanchay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textColor="#f24c0b"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Sách bán chạy" />

        <TextView
            android:id="@+id/text_thongke"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thống Kê"
            android:textColor="#f24c0b"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>